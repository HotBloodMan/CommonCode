<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#4C840B"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/Frame_BottemView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bg"
        android:orientation="horizontal"
        android:paddingTop="3dip" >

        <LinearLayout
            android:id="@+id/MyBottemMainBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemMainImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
			 	android:src="@drawable/pic_check_main" />
            
            <TextView
                android:id="@+id/MyBottemMainTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:text="首页"
                android:textColor="#579908"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MyBottemFoundBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemFoundImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/pic_found" />

            <TextView
                android:id="@+id/MyBottemFoundTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="#202020"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MyBottemRankingBtn"
            android:layout_width="wrap_content"	
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemRankingImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_marginTop="5dp"
                android:src="@drawable/pic_ranking" />

            <TextView
                android:id="@+id/MyBottemRankingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排行"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="#202020"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/MyBottemMyBtn"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/MyBottemMyImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:src="@drawable/pic_my" />

            <TextView
                android:id="@+id/MyBottemMyTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:textColor="#202020"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
